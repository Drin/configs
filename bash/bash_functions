function connect_ssh_agent {
   export SSH_AGENT_PID=$(pgrep ssh-agent)
   export SSH_AUTH_SOCK=$(find /tmp -name 'agent.[[:digit:]]*' -type s)
}

function gentex {
   base_filename=$1

   latex ${base_filename}.tex
   latex ${base_filename}.tex
   dvips ${base_filename}.dvi
   ps2pdf ${base_filename}.ps
}
